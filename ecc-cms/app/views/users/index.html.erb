<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
	<td><%= link_to 'Destroy', delete_user_path(user,:id => user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>

<% if notice %>
    <script>
        var message = <%= ("'" + notice.to_s + "'").html_safe %>
        Materialize.toast(message, 3000);
    </script>
<% end %>

