<div class="container">
  <h1>Codes</h1>
  <form action="/search" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
    <p>
      <input type="text" class="searchbar" name="q" id="q" value="" />
      <input class="btn" type="submit" value="Search" data-disable-with="Search" />
    </p>
  </form>
  <%= paginate(@documents) %>
  <% @documents.each do |document| %>
  <div class="row">
    <div class="col s12 m12">
      <div class="card medium hoverable">
	<div class="card-content">
          <span class="card-title"><%= document.title %></span>
	  <div class="divider"></div>
	  <%= document.institution %>
	  <div class="truncated">
	  <%= document.description.html_safe %>
	  </div>
	</div>
	<div class="card-action">
              <%= link_to 'Show',document, class: 'white-text red lighten-1 btn' %>
	</div>
      </div>
    </div>
  </div>
  <% end %>
  <%=paginate @documents, window: 2%>
</div>
</div>

<% if notice %>
    <script>
        var message = <%= ("'" + notice.to_s + "'").html_safe %>
        Materialize.toast(message, 3000);
    </script>
<% end %>

