<p id="notice"><%= notice %></p>

<h1>Documents</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Disclaimer</th>
      <th>Date</th>
      <th>Organization url</th>
      <th>Source value</th>
      <th>Source url</th>
      <th>Version</th>
      <th>Category</th>
      <th>Topics</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.description %></td>
        <td><%= document.disclaimer %></td>
        <td><%= document.date %></td>
        <td><%= document.organization_url %></td>
        <td><%= document.source_value %></td>
        <td><%= document.source_url %></td>
        <td><%= document.version %></td>
        <td><%= document.category %></td>
        <td><%= document.topics %></td>
	<td><%= link_to 'Show', document_url(:category => document.category,:org => document.organization_url,:id => document.id) %></td>
        <td><%= link_to 'Edit',document_url(:category => document.category,:org => document.organization_url,:id => document.id)%></td>
        <td><%= link_to 'Destroy', document_url(:category => document.category,:org => document.organization_url,:id => document.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

