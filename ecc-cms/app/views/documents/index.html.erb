<p id="notice">
  <%= notice %>
</p>

<div class="container">
  <h1>Documents</h1>

  <%= link_to 'New Document', new_document_path, class: "white-text red accent-4 btn" %>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @documents.each do |document| %>
          <tr>
            <td>
              <%= document.title %>
            </td>
            <td>
              <%= link_to 'Show', document, class: "white-text red accent-4 btn" %>
            </td>
            <td>
              <%= link_to 'Edit', edit_document_path(:org => document.institution, :id => document.id), class: "white-text red accent-4 btn" %>
            </td>
            <td>
              <%= link_to 'Destroy', delete_document_path(:org => document.institution, :id => document.id), class: "white-text red accent-4 btn" %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>

    <br>
    <%= link_to 'New Document', new_document_path, class: "white-text red accent-4 btn" %>

      <br><br><br>

</div>